{
	"expo": {
		"name": "xtrackr",
		"slug": "xtrackr",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/images/icon.png",
		"scheme": "xtrackr",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"ios": {
			"supportsTablet": true
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/images/adaptive-icon.png",
				"backgroundColor": "#04030F"
			}
		},
		"plugins": [
			"expo-router",
			[
				"expo-font",
				{
					"fonts": ["assets/fonts/Manrope-Light.ttf"]
				}
			],
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/splash-icon.png",
					"imageWidth": 200,
					"resizeMode": "contain",
					"backgroundColor": "#04030F"
				}
			],
			[
				"expo-secure-store",
				{
					"configureAndroidBackup": true,
					"faceIDPermission": "Allow xtrackr to access your Face ID biometric data."
				}
			]
		],
		"experiments": {
			"typedRoutes": true
		}
	}
}
